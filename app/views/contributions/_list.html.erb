<h2><%= pluralize @contributions.count, 'contribution' %>:</h2>
<table>
	<thead><tr>
		<th>Name</th>
		<th>Type</th>
		<th>User</th>
		<th></th>
	</tr></thead>
	<tbody>
	<% @contributions.each do |contrib| %>
		<tr<%= " class='cancelled'" if contrib.removed? %>>
			<td><%= contrib.name %></td>
			<td style="background-color: <%= contrib.contribution_type.colour %>;"><%= contrib.contribution_type.name %></td>
			<td><%= contrib.user.name %></td>
			<td><%= 
			if contrib.belongs_to? current_user
			  if contrib.removed?
			    then link_to(image_tag('accept.png'), confirm_event_contribution_path(@event, contrib))
			    else link_to(image_tag('cancel.png'), cancel_event_contribution_path(@event, contrib))
			  end
			end
			%></td>
		</tr>
	<% end %>
	</tbody>
</table>

<section class="collapsable collapsed">
  <h3>Add contribution</h3>
  <%= render :partial => "contributions/mini_form" %>
</section>