<%= form_for([@event, @new_comment]) do |f| %>
  <div class="field">
    <%= f.label :title %>:
    <%= f.text_field :title, :required => '' %>
  </div>
  <div class="field">
    <%= f.text_area :description, cols: 60, rows: 5, placeholder: Comment.human_attribute_name(:description) %>
  </div>
  <div class="actions">
    <%= f.submit t('tert.Add') %>
  </div>
<% end %>
