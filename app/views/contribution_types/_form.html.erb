<%= form_for(@contribution_type) do |f| %>
  <%= render 'shared/error_messages', :object => @contribution_type %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :colour_hex %> &mdash; <%= link_to t(:colorpicker), 'http://www.colorpicker.com' %><br />
    <%= f.text_field :colour %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>