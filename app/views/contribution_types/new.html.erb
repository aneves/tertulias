<h1>New resource type</h1>

<%= form_for([@event, @contribution_type]) do |f| %>
  <%= render 'shared/error_messages', :object => @contribution_type %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :colour %><br />
    <%= f.text_field :colour %>
  </div>
  <div class="actions">
    <%= f.submit t("tert.Create") %>
  </div>
<% end %>


<%= link_to t('Back'), event_path(params[:event_id]) %>
