<p>
  <b><%= Event.human_attribute_name 'when' %>:</b>
  <%= l @event.when, format: :long %>
</p>

<p>
  <b><%= Event.human_attribute_name 'location' %>:</b>
  <%= @event.location %>
</p>

<p>
  <b><%= Event.human_attribute_name 'owner' %>:</b>
  <%= @event.owner.name %>
</p>

<% if @event.description.present? %>
<p>
  <b><%= Event.human_attribute_name 'description' %>:</b>
  <div class="description"><%= @event.description %></div>
</p>
<% end %>

<% if @event.belongs_to? current_user %>
<ul class='options'>
	<li><%= link_to t(:Edit), edit_event_path(@event), class: :edit %>
</ul>
<% end %>


<section id="guests">
  <%= render :partial => "guests/list" %>
</section>

<section id="contributions">
  <%= render :partial => "contributions/list" %>
</section>

<section id="comments">
  <%= render :partial => "comments/list" %>
</section>
