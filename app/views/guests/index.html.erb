<h2>Listing guests</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Coming</th>
    <th>Registered by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.name %></td>
    <td><%= guest.coming %></td>
    <td><%= guest.user.name %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

