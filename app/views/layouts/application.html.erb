<!DOCTYPE html>
<html>
<head>
  <title>Tertúlia</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="menu">
	<% if user_signed_in? %>
		<%= current_user.name %> <%= link_to t(:sign_out), destroy_user_session_path, :method => :delete %>
	<% else %>
		<%= link_to t(:sign_in), new_user_session_path %>
		<%= t :or %>
		<%= link_to t(:sign_up), new_user_registration_path %>
	<% end %>
</div>

<h1><%= t 'tert.title' %></h1>

<% if user_signed_in? %>
<nav>
<%= t "tert.Existing_events" %>
<ul>
	<% id = params[:id].to_i
		Event.all.each do |e| %>
		<li<%= " class='selected'" if e.id == id %>>
			<%= link_to e.name, e %>
	<% end %>
	<li><%= link_to t('tert.add_x', :model => Event.model_name.human), new_event_path, class: :add %>
</ul>
</nav>
<% end %>

<div id="messages">
	<%= "<p class='notice'>#{notice}</p>".html_safe if notice %>
	<%= "<p class='alert'>#{alert}</p>".html_safe if alert %>
</div>

<%= yield %>

</body>
</html>
